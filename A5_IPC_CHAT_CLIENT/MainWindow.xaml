<Window x:Class="A5_IPC_CHAT_CLIENT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="630" Width="1160">
    <Grid Background="#222222">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Name="Title" 
                       Foreground="#999999"
                       FontFamily="Helevetica"
                       FontSize="26pt" 
                       FontWeight="Bold"
                       TextAlignment="Center">
                Chat Client v1.0.0
            </TextBlock>


            <!--should i used textbox or textblock for output????-->
            <TextBox Grid.Column="0"
         Grid.Row="1"
         Name="Output"/>
            <TextBox Grid.Column="0"
         Grid.Row="3"
         Name="Input"/>

        </Grid>
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Button Grid.Column="1" 
                    Grid.Row="4" 
                    Name="Send"
                    Content="Send"
                    Click="Send_Click"/>
            <Button Grid.Column="1" 
                    Grid.Row="5" 
                    Name="Clear"
                    Content="Clear"
                    Click="Clear_Click"/>
        </Grid>
        <Label Content="IP Address" Foreground="White" Margin="142.4,246,-143.4,-245.4" Grid.Column="2"/>
        <TextBox Name="IP_Field" Text="127.0.1.1" Grid.Column="2" Height="30" Width="100" />
        <Button 
            x:Name="ConnectButton"
            Content="Connect"
            Click="ConnectButton_Click" Margin="142.4,342,49.6,159.6" Grid.Column="2"/>

    </Grid>
</Window>
